{
  "name": "ubpsn",
  "version": "1.0.0",
  "description": "Uptown/Buena Park Solidarity Network website.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && mkdir dist && ./node_modules/.bin/webpack && cp ./src/index.html ./dist && cp ./src/img/favicon.ico ./dist/",
    "deploy": "source .shell_config && npm run build && rsync -avz ./dist/* $WEBSITE_SSH:/home/public",
    "serve-dev": "./node_modules/.bin/webpack-dev-server --progress --colors --content-base src/ --output-public-path /static/",
    "ssh": "source .shell_config && ssh $WEBSITE_SSH"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kand/ubpsn.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kand/ubpsn/issues"
  },
  "homepage": "https://github.com/kand/ubpsn#readme",
  "private": true,
  "devDependencies": {
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "font-awesome": "^4.7.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "open": "^7.0.4",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
